{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["products", "total", "skip", "limit"],
  "properties": {
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "price", "category"],
        "properties": {
          "id": { "type": "number" },
          "title": { "type": "string" },
          "price": { "type": "number" },
          "category": { "type": "string" }
        }
      }
    },
    "total": { "type": "number" },
    "skip": { "type": "number" },
    "limit": { "type": "number" }
  }
}
